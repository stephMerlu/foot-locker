{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"><img src="{{ asset('130-1301685_stiker-air-jordan-off-white-clipart-png-download.png') }}" alt="Logo" width="auto" height="50"></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Acceuil</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#sneaker">Collection Sneakers</a>
        </li>
        <li class="nav-item dropdown">
      <form class="d-flex" role="search">
        <input class="form-control me-2" type="search" placeholder="Rechercher" aria-label="">
        <button class="btn btn-outline-primary" type="submit"><i class="fa-solid fa-eye"></i></button>
      </form>
    </div>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button class="btn btn-outline-primary me-2" type="button">Connexion</button>
        <button class="btn btn-primary" type="button">Inscription</button>
      </div>
  </div>
</nav>
<section id="presentation">
  <div class="presentation-container">
    <h1>Welcome to</h1>
    <h2>Life is to Shoeessss</h2>
  </div>
</section>
<section id="sneaker">
<div class="container-fluid">
    <h1 class="text-center mt-5">La collection de sneakers</h1>
      <div class="justify-content-end">
        {{ form_start(search_form, {'attr': {'class': 'mt-5'}}) }}
          <div class="row g-3">
            <div class="col-md-3 mb-3">
              {{ form_row(search_form.price, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-3 mb-3">
              {{ form_row(search_form.sexe, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-3 mb-3">
              {{ form_row(search_form.category, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-3 mb-3">
              {{ form_row(search_form.orderBy, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-12 d-flex justify-content-center">
              <button class="btn btn-primary btn-lm mx-auto" type="submit">Filtrer</button>
            </div>
          </div>
        {{ form_end(search_form) }}
      </div>
    <div class="d-flex flex-wrap justify-content-center">
      <div class="row row-cols-md-3 g-4 mt-5">
        {% for shoe in shoes %}
          <div class="col">
            <div class="card text-end">
              <img src="{{ vich_uploader_asset(shoe) }}" class="card-img img-fit img-responsive"/>
              <div class="card-body">
                <h5 class="card-title">{{ shoe.name }}</h5>
                <p class="card-text">Prix : {{ shoe.price }}â‚¬</p>
                <a href="{{ path('app_presentation_shoe', {'id': shoe.id}) }}" class="btn btn-primary">Afficher le produit</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

  
{% endblock %}
