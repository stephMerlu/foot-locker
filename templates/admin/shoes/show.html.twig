{% extends 'base.html.twig' %}

{% block title %}Shoes{% endblock %}

{% block body %}
<div class="container">
    <div class="card mt-5">
        <div class="card-header">
            <h1>{{ shoe.name }}</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <img src="{{ shoe.getImageUrl() }}" alt="{{ shoe.name }}" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ shoe.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ shoe.name }}</td>
                            </tr>
                            <tr>
                                <th>Price</th>
                                <td>{{ shoe.price }}</td>
                            </tr>
                            <tr>
                                <th>Sexe</th>
                                <td>{{ shoe.sexe }}</td>
                            </tr>
                            <tr>
                                <th>Category</th>
                                <td>{{ shoe.category }}</td>
                            </tr>
                            <tr>
                                <th>ShoeSize</th>
                                <td>{{ shoe.shoeSize|join(', ') }}</td>
                            </tr>
                            <tr>
                                <th>QuatityStock</th>
                                <td>{{ shoe.quatityStock }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-star">
                        <a href="{{ path('app_admin_shoes_edit', {'id': shoe.id}) }}" class="btn btn-primary me-3">Modifier</a>
                        <a href="{{ path('app_admin_shoes_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
                    </div>
                    <div class="d-flex justify-content-end">{{ include('admin/shoes/_delete_form.html.twig') }}</div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

